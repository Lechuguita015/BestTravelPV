<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="#FFC107"/> <!-- Color al seleccionar -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFC107"/> <!-- Color al hacer clic -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#CCCCCC"/> <!-- Color principal de tono gris -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>